{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@db/*": ["packages/db/src/*"],
      "@core/*": ["packages/core/src/*"],
      "@prompts/*": ["packages/prompts/*"],
      "@app/workers/*": ["apps/workers/src/*"]
    },

    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": ["node"]
  }
}
